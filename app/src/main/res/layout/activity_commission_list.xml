<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.test.tworldapplication.activity.admin.AboutUsActivity">

    <include layout="@layout/layout_background_two" />
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="佣金总计  "
                android:textSize="16sp"
                android:textColor="@color/colorGray1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/amount"
                tools:text="138"
                android:textSize="16sp"
                android:textColor="@color/colorOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="元"
                android:textSize="16sp"
                android:textColor="@color/colorOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/comm_list_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="@null"
        app:tabSelectedTextColor="@color/colorGray"
        app:tabTextColor="@color/gray"/>
    <View
        android:background="@color/colorGray13"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/comm_list_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
