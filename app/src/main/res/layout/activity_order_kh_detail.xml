<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_kh_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include layout="@layout/layout_background_two" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/llOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="订单信息"
                android:textColor="@color/colorOrange" />

            <View
                android:id="@+id/vOrder"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorOrange" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExpense"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvExpense"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="资费信息"
                android:textColor="@color/colorGray1" />

            <View
                android:id="@+id/vExpense"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorOrange"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCustomer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="客户信息"
                android:textColor="@color/colorGray1" />

            <View
                android:id="@+id/vCustomer"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorOrange"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llOrderDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvId"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="订单编号:" />
                <TextView
                    android:id="@+id/tvPhonn"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="开户号码:" />

                <TextView
                    android:id="@+id/tvOrdertime"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="订单时间:" />

                <TextView
                    android:id="@+id/tvType"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="订单类型:" />

                <TextView
                    android:id="@+id/tvState"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="订单状态:" />


                <TextView
                    android:id="@+id/tvChecktime"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="审核时间:"
                    android:layout_marginBottom="14dp"/>


                <TextView
                    android:id="@+id/tvResult"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:text="原因:"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExpenseDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvMoney"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="预存金额:" />

                <TextView
                    android:id="@+id/tvActivity"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="活动包:" />

                <TextView
                    android:id="@+id/tvRegulai"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:text="靓号规则:AAAAA" />

                <TextView
                    android:id="@+id/tvPackage"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="套餐选择:"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvDate"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:text="起止日期:"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCustomerDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="姓名:" />

                    <TextView
                        android:id="@+id/tvIdCard"
                        style="@style/textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="身份证号码:" />

                    <TextView
                        android:id="@+id/tvAddress"
                        style="@style/textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="身份证地址:" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/imgIdAll"
                        android:layout_width="match_parent"
                        android:layout_height="224dp"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/image_not_found" />

                    <ImageView
                        android:id="@+id/imgIdCard"
                        android:layout_width="match_parent"
                        android:layout_height="224dp"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="13dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/image_not_found" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
