<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray12"
    android:orientation="vertical"
    tools:context="com.test.tworldapplication.activity.card.ProductInputActivity">

    <include layout="@layout/layout_background_two" />

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="您当前订购产品的手机号为"
            android:textColor="@color/colorGray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorOrange"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改"
            android:textColor="@color/colorGray5" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/arrow_right_gray" />

    </LinearLayout>


    <ListView
        android:id="@+id/product_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:cacheColorHint="@color/colorWhite"
        android:divider="@color/colorGray12"
        android:dividerHeight="10dp"
        android:groupIndicator="@null"
        android:listSelector="@color/colorWhite" />
</LinearLayout>
