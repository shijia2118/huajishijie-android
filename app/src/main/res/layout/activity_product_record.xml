<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray12"
    android:orientation="vertical"
    tools:context="com.test.tworldapplication.activity.order.ProductRecordActivity">

    <include layout="@layout/layout_background_two" />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/springview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:footer="@layout/header_recycle"
            app:header="@layout/header_recycle"
            app:type="follow">

            <ListView
                android:id="@+id/record_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:cacheColorHint="@color/colorWhite"
                android:divider="@color/colorGray12"
                android:dividerHeight="10dp"
                android:groupIndicator="@null"
                android:listSelector="@color/colorWhite" />
        </com.liaoinstan.springview.widget.SpringView>

        <View
            android:id="@+id/shadow_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@color/black"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
