<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvAll"
            style="@style/textTitle"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_recharge"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/colorBlue" />

        <TextView
            android:id="@+id/tvActivation"
            style="@style/textTitle"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_recharge_gray"
            android:gravity="center"
            android:text="已激活"
            android:textColor="@color/colorGray5" />

        <TextView
            android:id="@+id/tvUsed"
            style="@style/textTitle"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_recharge_gray"
            android:gravity="center"
            android:text="已使用"
            android:textColor="@color/colorGray5" />


    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray7" />
    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/textBig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="省市选择" />

        <TextView
            android:id="@+id/tvAddress"
            style="@style/editContentLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/arr_right" />

    </LinearLayout>

    <View
        android:id="@+id/vLine0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray7" />


    <LinearLayout
        android:id="@+id/ll_regular"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/textBig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="靓号规则" />

        <TextView
            android:id="@+id/tvRegular"
            style="@style/editContentLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/arr_right" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray7" />

    <LinearLayout
        android:id="@+id/llState"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/textBig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="手机号码" />

        <EditText
            android:id="@+id/etNumber"
            style="@style/editContentLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:gravity="right"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvReset"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bt_background_reset"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/colorGray11"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvInquery"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bt_background_new"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />


    </LinearLayout>
</LinearLayout>
