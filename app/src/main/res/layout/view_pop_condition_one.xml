<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="15dp">


    <LinearLayout
        android:id="@+id/llState"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTitleState"
            style="@style/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时间段" />

        <TextView
            android:id="@+id/tvState"
            style="@style/editContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/arr_right" />

    </LinearLayout>

    <View
        android:id="@+id/linePhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray7" />

    <RelativeLayout
        android:id="@+id/llPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite">

        <TextView
            style="@style/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="工号" />

        <EditText
            android:id="@+id/etNumber"
            style="@style/editContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:gravity="right"
            android:hint="请输入工号" />


    </RelativeLayout>

    <View
        android:id="@+id/lineCzState"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray7" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvInquery"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:background="@drawable/shape_bt_background"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvReset"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_bt_background"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>
