    <style name="editContent">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColorHint">@color/colorGray10</item>

    </style>

    <style name="editContentLight">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">@color/colorGray5</item>

    </style>

